<!--
osgEarth Sample - Use a bump map to simulate terrain variation
Run with --sky
-->
<map name="BumpMap Example (use --sky)">

    <xi:include href="readymap_imagery.xml"/>

    <xi:include href="readymap_elevation.xml"/>

    <bumpmap>
        <image>../data/rock_hard.jpg</image>
        <octaves>8</octaves>
        <intensity>2.5</intensity>
    </bumpmap>

    <Viewpoints home="0">
        <viewpoint>
            <heading>15.2667</heading>
            <pitch>-22.6195</pitch>
            <range>5583.51m</range>
            <long>-121.7536965189191</long>
            <lat>46.83712924004765</lat>
            <height>3472.802966509946</height>
            <srs>+proj=longlat +datum=WGS84 +no_defs </srs>
        </viewpoint>
    </Viewpoints>
</map>
